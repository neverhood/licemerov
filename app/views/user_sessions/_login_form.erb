<%= form_for UserSession.new do |f| %>
    <div class="row">
      <div><%= t(:user_login) %>:</div> <%= f.text_field :login %>
    </div>
    <div class="row">
      <div><%= t(:password) %>:</div> <%= f.password_field :password %>
    </div>
    <div class="row">
      <%= f.label t(:remember_me) %> <%= f.check_box :remember_me %>
    </div>
    <div class="submit">
      <%= f.submit t(:login), :disable_with => t(:please_wait) %>
    </div>
<% end %>