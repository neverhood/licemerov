
<% allowed_items = eval(@photo.permissions) %>

<% if profile_owner? %>

    <div id='rating-items-header'>
      <span class='show-primary'>PRIMARY</span> <span class='show-secondary'>SECONDARY</span>
    </div>

    <div class='primary'>
      <% current_user.rating_items[:primary].each do |item| %>
          <% if allowed_items[:primary].include?(item.to_sym) %>

              <div class='allowed-rating-item'>
                <%= item %> <%= image_tag '/images/minus.gif', :class => 'disable-rating-item' %>
              </div>

          <% else %>

              <div class='restricted-rating-item'>
                <%= item %> <%= image_tag '/images/plus.png', :class => 'enable-rating-item' %>
              </div>

          <% end %>
      <% end %>
    </div>

    <div class='secondary hidden'>
      <% current_user.rating_items[:secondary].each do |item| %>
          <% if allowed_items[:secondary].include?(item.to_sym) %>
              <div class='allowed-rating-item'>
                <%= item %> <%= image_tag '/images/minus.gif', :class => 'disable-rating-item' %>
              </div>
          <% else %>
              <div class='restricted-rating-item'>
                <%= item %> <%= image_tag '/images/plus.png', :class => 'enable-rating-item' %>
              </div>
          <% end %>
      <% end %>
    </div>

<% else %>

<% end %>