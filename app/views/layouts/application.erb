<!DOCTYPE html>
<html>
<head>
  <title>Licemerov.net</title>
  <%= stylesheet_link_tag :defaults %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'form', 'jquery.remotipart' %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>
<%= render :partial => 'shared/header' %>
<div id="wrapper" rel="<%= @user ? @user.id : nil %>">
  <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:alert] %>
      <div class="alert"><%= flash[:alert] %></div>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
