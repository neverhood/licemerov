<%= remotipart_response do %>
var type = "<%= @entry.type %>";
var form = $('#' + type + '_form');
var id = "entry-<%= @entry.id %>";
var entry = $("<%= escape_javascript(render :partial => @entry.type_partial, :locals => {:entry => @entry_with_user_details} ) %>");
var errors = "<%= @entry.errors.any? ? @entry.errors.full_messages.join(',') : nil %>".split(',');
if (errors[0] == '') errors.pop(); // Remove blank element

if (errors.length > 0)  // Errors didn't let it happen
    appendErrors(errors, form);
else { // No errors
    if (type == 'parent')
        entry.prependTo('table#root-comments').hide().fadeIn();
    else {
        $('#<%= @entry.parent_id%>.parent').find('.root-comment-responses').
                append(entry);
        $(form).hide();
        $("html:not(:animated)"+( ! $.browser.opera ? ",body:not(:animated)" : "")).
                animate({scrollTop: entry.offset().top - 25}, 700);
    }

    $(form).clearForm();
}
<% end %>
